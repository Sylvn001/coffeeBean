<%= form_with(model: user) do |form| %>
  <% if  user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="divider d-flex align-items-center my-4">
    <p class="text-center fw-bold mx-3 mb-0 display-4">Register</p>
  </div>

  <div class="form-outline mb-4">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control form-control-lg", placeholder: "Enter a name" %>
  </div>

  <div class="form-outline mb-4">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control form-control-lg", placeholder:"Enter a valid email" %>
  </div>

  <div class="form-outline mb-3">
    <%= form.label :password %>
    <%= form.password_field  :password, class: "form-control form-control-lg", placeholder:"Enter a password"%>
  </div>

  <div class="d-flex justify-content-between align-items-center">
    <div class="form-check mb-0">
      <input class="form-check-input me-2" type="checkbox" value="" id="rememberMe" />
      <label class="form-check-label" for="rememberMe">
        Remember me
      </label>
    </div>
    <a href="#!" class="text-body">Forgot password?</a>
  </div>

  <div class="text-center text-lg-start mt-4 pt-2">
    <%= form.submit class: "btn btn-primary btn-lg pl-2 pr-2" %>
    <p class="small fw-bold mt-2 pt-1 mb-0">Already have account?
      <%= link_to "Login", users_path  %>
    </p>
  </div>

<% end %>

